<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:addStatesFromChildren="true"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_linear_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_list_single_item_height"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@drawable/activated_doctor_schedule_list_item_text_color"
            tools:text="2015-05-20"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_list_single_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"     android:textColor="@drawable/activated_doctor_schedule_list_item_text_color"
            tools:text="周五下午 14:00-17:00"
            />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_list_single_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"        android:textColor="@drawable/activated_doctor_schedule_list_item_text_color"
            android:singleLine="true"
            tools:text="周五下午 14:00-17:00"
            />
    </LinearLayout>
</LinearLayout>