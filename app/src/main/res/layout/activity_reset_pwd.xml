<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_content_background_color"
    android:fillViewport="false"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/frame_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/color_white_color"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:singleLine="true"
            android:text="密码设置"
            android:textColor="#FF222222"
            tools:text="密码设置"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            >
            <EditText
                android:id="@+id/et_pwd1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_background"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:padding="4dp"
                android:singleLine="true"
                android:textColorHint="#FF666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="44dp">
          <ImageView
              android:layout_width="44dp"
              android:padding="8dp"
              android:src="@mipmap/ic_get_medical_hint"
              android:layout_height="44dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="#FF999999"
            tools:text="密码长度6-32位字符组成"
            android:text="密码长度6-32位字符组成"/>
        </LinearLayout>



        <TextView

            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:singleLine="true"
            android:text="密码确认"
            android:textColor="#FF222222"
            tools:text="密码确认"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            >
            <EditText
                android:id="@+id/et_pwd2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_background"
                android:hint="请再输入一次新密码"
                android:inputType="textPassword"
                android:padding="4dp"
                android:singleLine="true"
                android:textColorHint="#FF666666"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/btn_register_code_selector"
            android:text="修&#160;&#160;&#160;&#160;改"
            android:textColor="#FFFFFFFF"/>
    </LinearLayout>
</ScrollView>