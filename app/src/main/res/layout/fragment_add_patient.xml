<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/sv_scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_white_color"
    android:scrollbars="none">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_margin="15dp"
                      android:fitsSystemWindows="true"
                      android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/shape_edittext_background"

                          android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="姓名"
                        android:textColor="@color/color_main_text_gray_color"/>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:layout_height="match_parent"
                        android:layout_weight="1"         android:padding="10dp"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入姓名"
                        android:textColor="#FF333333"
                        android:textColorHint="#FF999999"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FF999999"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:padding="10dp"
                        android:text="身份证"
                        android:textColor="@color/color_main_text_gray_color"/>

                    <EditText
                        android:id="@+id/et_card"
                        android:layout_width="0dp"
                        android:inputType="textVisiblePassword"
                        android:layout_height="match_parent"
                        android:layout_weight="1"    android:padding="10dp"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请输入身份证号"
                        android:textColor="#FF333333"
                        android:textColorHint="#FF999999"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FF999999"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:padding="10dp"
                        android:text="性别"
                        android:textColor="@color/color_main_text_gray_color"/>

                    <RadioGroup
                        android:id="@+id/rg_gender"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:gravity="right|center_vertical"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <RadioButton
                            android:id="@+id/rb_man"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:checked="true"
                            android:text="男"/>

                        <RadioButton
                            android:id="@+id/rb_woman"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:text="女"/>

                    </RadioGroup>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FF999999"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="出生年月"
                        android:textColor="@color/color_main_text_gray_color"/>

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"     android:padding="10dp"
                        android:gravity="right|center_vertical"
                        android:hint="请选择出生年月"
                        android:textColor="#FF333333"
                        android:textColorHint="#FF999999"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FF999999"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:padding="10dp"
                        android:text="手机"
                        android:textColor="@color/color_main_text_gray_color"/>

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="phone"
                        android:background="@null"
                        android:padding="10dp"
                        android:gravity="right|center_vertical"
                        android:hint="请输入手机号码"
                        android:textColor="#FF333333"
                        android:textColorHint="#FF999999"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FF999999"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="设置为默认就诊人"
                    android:textColor="@color/color_main_text_gray_color"/>

                <Switch
                    android:id="@+id/switch_switch"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:checked="true"
                    android:gravity="center"
                    android:textOff="否"
                    android:textOn="是"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_add_patient"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/btn_register_code_selector"
                android:text="添  加"
                android:textColor="#FFFFFFFF"/>
        </LinearLayout>

</ScrollView>

