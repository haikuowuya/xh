<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_content_background_color"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/ptr_scrollview_container"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="1000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_resistance="1.7">

        <ScrollView
            android:id="@+id/sv_scrollview"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:entries="@array/array_menu"

            android:scrollbars="none">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:fitsSystemWindows="true"
                          android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_margin="10dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white_color"
                        android:gravity="center_vertical"
                        android:hint="请输入你要搜索的内容"
                        android:paddingLeft="8dp"
                        android:paddingRight="44dp"
                        android:singleLine="true"
                        android:textColorHint="@color/color_main_text_gray_color"/>

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="4dp"
                        android:src="@mipmap/ic_launcher"/>

                </RelativeLayout>

                <include layout="@layout/layout_custom_listview"/>
            </LinearLayout>
        </ScrollView>
    </in.srain.cube.views.ptr.PtrClassicFrameLayout>

</LinearLayout>
