<ScrollView
    android:id="@id/sv_scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_content_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_linear_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            >

            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.xinheng.view.CircularImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"

                    android:padding="20dp"
                    android:src="@mipmap/ic_photo"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_list_single_item_height"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textColor="@color/color_main_text_gray_color"
                        tools:text="张三"/>

                    <TextView
                        android:id="@+id/tv_dector_evaluation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="10dp"
                        android:singleLine="true"
                        tools:text="服务 4.8 "/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_doctor_hospital_dept"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_list_single_item_height"
                    android:gravity="center_vertical"
                    tools:text="苏州市中医院  内分泌科/副主任医师"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"

                    android:text="服务"
                    tools:text="服务"/>

                <RatingBar
                    style="@style/Custom.RatingBar.Indicator"
                    android:layout_width="132dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:numStars="5"
                    android:padding="10dp"
                    android:rating="4.5"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@color/color_white_color"
                android:gravity="top"
                android:hint="请写下你的宝贵意见呦"
                android:padding="10dp"
                android:textColorHint="#FFCCCCCC"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"

                    android:text="服务"
                    tools:text="服务"/>

                <RatingBar
                    style="@style/Custom.RatingBar.Indicator"
                    android:layout_width="132dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:numStars="5"
                    android:padding="10dp"
                    android:rating="4.5"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@color/color_white_color"
                android:gravity="top"
                android:hint="请写下你的宝贵意见呦"
                android:padding="10dp"
                android:textColorHint="#FFCCCCCC"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"

                    android:text="服务"
                    tools:text="服务"/>

                <RatingBar
                    style="@style/Custom.RatingBar.Indicator"
                    android:layout_width="132dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:numStars="5"
                    android:padding="10dp"
                    android:rating="4.5"/>
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@color/color_white_color"
                android:gravity="top"
                android:hint="请写下你的宝贵意见呦"
                android:padding="10dp"
                android:textColorHint="#FFCCCCCC"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_register_code_selector"
            android:text="@string/tv_submit"
            android:textColor="#FFFFFFFF"/>


    </LinearLayout>


</ScrollView>