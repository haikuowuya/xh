<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/sv_scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_content_background_color"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_linear_item_selector"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_linear_item_selector"
            android:orientation="horizontal">

            <com.xinheng.view.CircularImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:padding="20dp"
                android:id="@+id/civ_image"
                android:src="@mipmap/ic_photo"
                cv:civ_border="true"
                cv:civ_borderColor="@color/color_main_text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/color_main_text_gray_color"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="孔德明"/>

                    <TextView
                        android:id="@+id/tv_technical_post"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/color_main_text_gray_color"
                        tools:text="主任医师"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_dept_name"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_main_text_gray_color"
                    tools:text="国家级重点专科/内分泌科"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_schedule_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FF999999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="就诊日期"
                    android:textColor="@color/color_main_text_gray_color"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textColor="@color/color_main_text_gray_color"
                    tools:text="2015-05-20周四下午"/>

                <ImageView
                    android:id="@+id/iv_select_date"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@mipmap/ic_subscribe_date"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FF999999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="门诊类型"
                    android:textColor="@color/color_main_text_gray_color"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textColor="@color/color_main_text_gray_color"
                    tools:text="专家门诊"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FF999999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="挂号费用"
                    android:textColor="@color/color_main_text_gray_color"/>

                <TextView
                    android:id="@+id/tv_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textColor="@color/color_main_text_gray_color"
                    tools:text="9.5"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FF999999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="就诊地点"
                    android:textColor="@color/color_main_text_gray_color"/>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/color_main_text_gray_color"
                    tools:text="门诊楼二楼"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#FF999999"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="就诊人"
                    android:textColor="@color/color_main_text_gray_color"/>

                <LinearLayout
                    android:id="@+id/linear_patient_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    />

                <TextView
                    android:id="@+id/tv_select_patient"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@drawable/user_subscribe_detail_selector"
                    android:drawableLeft="@mipmap/ic_subscribe_select_patient"
                    android:drawablePadding="4dp"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:src="@mipmap/ic_subscribe_date"
                    android:text="选择患者"
                    android:textColor="#FFF17E56"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="初复诊"

                    android:textColor="@color/color_main_text_gray_color"/>

                <TextView
                    android:id="@+id/tv_first_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:background="@drawable/activated_first_second_visit"
                    android:gravity="center"
                    android:minWidth="72dp"
                    android:text="初诊"
                    android:textColor="@drawable/activated_first_second_visit_text_color"/>

                <TextView
                    android:id="@+id/tv_second_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:background="@drawable/activated_first_second_visit"
                    android:gravity="center"
                    android:minWidth="72dp"
                    android:text="复诊"
                    android:textColor="@drawable/activated_first_second_visit_text_color"/>
            </LinearLayout>
        </LinearLayout>


        <EditText
            android:id="@+id/et_conditionReport"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edittext_round_background"
            android:gravity="top"
            android:hint="病情自述 ，请详细描述您的健康问题，疾病症状等信息。"
            android:orientation="vertical"
            android:padding="4dp"
            android:textColor="#FF333333"
            android:textColorHint="@color/color_main_text_gray_color">
        </EditText>

        <EditText
            android:id="@+id/et_symptoms"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edittext_round_background"
            android:gravity="top"
            android:hint="症状自述，请详细描述您的健康问题，疾病症状等信息 。"
            android:orientation="vertical"
            android:padding="4dp"
            android:textColor="#FF333333"
            android:textColorHint="@color/color_main_text_gray_color">
        </EditText>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edittext_round_background"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:textColor="#FF333333"
                android:text="病历授权"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FF999999"/>
            <LinearLayout
                android:id="@+id/linear_patient_record_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_grid_container"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/color_white_color"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/layout_custom_gridview"/>


        </LinearLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_register_code_selector"
            android:text="@string/tv_submit"
            android:textColor="#FFFFFFFF"/>


    </LinearLayout>
</ScrollView>

