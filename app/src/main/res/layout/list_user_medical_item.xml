<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_linear_item_selector"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_linear_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.xinheng.view.CircularImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:id="@+id/iv_image"
                android:padding="20dp"
                android:src="@mipmap/ic_user_medical_0"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:gravity="center_vertical"
                android:text="报告名称"
                tools:text="报告名称"/>


            <TextView
                android:id="@+id/tv_hospital_dept"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:gravity="center_vertical"
                tools:text="医院科室"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_user_arrow"/>

    </LinearLayout>
</android.support.v7.widget.CardView>