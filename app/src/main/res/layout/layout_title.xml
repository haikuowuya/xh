<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear_title_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_title_height"
        android:background="@color/color_title_background_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dimen_title_height"
            android:layout_height="@dimen/dimen_title_height"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_home_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_title_height"
            android:padding="10dp"
            android:src="@mipmap/ic_main_logo"
            android:layout_marginLeft="4dp"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_center_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            tools:text="标题"/>

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/dimen_title_height"
            android:layout_height="@dimen/dimen_title_height"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:layout_marginRight="4dp"
            android:src="@mipmap/ic_right_menu"
            android:visibility="visible"
            tools:visibility="visible"/>

    </RelativeLayout>

    <ImageView
    
        android:layout_width="match_parent"
        android:src="@mipmap/ic_title_bottom"
        android:scaleType="fitXY"
        android:layout_height="wrap_content"/>


</LinearLayout>