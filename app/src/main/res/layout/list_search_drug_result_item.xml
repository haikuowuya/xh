<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_linear_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingRight="10dp">

    <com.xinheng.view.CircularImageView
        android:id="@+id/civ_image"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:padding="6dp"
        android:src="@mipmap/ic_user_medical_0"/>

    b

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/tv_drug_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_list_single_item_height"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="药品名称"
            android:textColor="#FF333333"
            tools:text="药品名称"/>


        <TextView
            android:id="@+id/tv_drug_info"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_list_single_item_height"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/color_main_text_gray_color"
            tools:text="清热解毒，祛痰止咳、脘腹"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_register_code_selector"
        android:gravity="center"
        android:minHeight="36dp"
        android:padding="10dp"
        android:src="@mipmap/ic_user_arrow"
        android:text="加入处方"
        android:textColor="@color/color_white_color"
        android:visibility="gone"/>

</LinearLayout>