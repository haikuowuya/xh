<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:id="@+id/sv_scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:fitsSystemWindows="true"
                  android:background="@color/color_content_background_color"
                  android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="10dp"
            android:background="@color/color_white_color">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/iv_search"
                android:background="@color/color_white_color"
                android:gravity="center_vertical"
                android:hint="请输入你要搜索的内容"
                android:paddingLeft="8dp"
                android:singleLine="true"
                android:textColorHint="@color/color_main_text_gray_color"/>

            <ImageView
                android:id="@+id/iv_search"

                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/list_linear_item_selector"
                android:padding="8dp"
                android:src="@mipmap/ic_search"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shape_ad_bottom_shadow"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="4dp"/>


        <RelativeLayout
            android:id="@+id/relative_dept_container"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/list_linear_white_item_selector">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@mipmap/ic_find_medical_0"/>

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_toLeftOf="@+id/iv_arrow"
                android:layout_toRightOf="@+id/iv_icon"
                android:gravity="center_vertical|bottom"
                android:padding="4dp"
                android:text="按照科室找药"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignRight="@+id/tv_text"
                android:layout_below="@+id/tv_text"
                android:layout_toRightOf="@+id/iv_icon"
                android:gravity="center_vertical|top"

                android:padding="4dp"
                android:text="根据科室查疾病，快速找药"
                android:textColor="@color/color_main_text_gray_color"/>

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_find_medical_arrow"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFD2D2D2"
            />

        <RelativeLayout
            android:id="@+id/relative_person_container"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/list_linear_white_item_selector">

            <ImageView
                android:id="@id/iv_icon"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:src="@mipmap/ic_find_medical_1"/>

            <TextView
                android:id="@id/tv_text"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_toLeftOf="@+id/iv_arrow"
                android:layout_toRightOf="@+id/iv_icon"
                android:gravity="center_vertical|bottom"
                android:padding="4dp"
                android:text="按照部位找药"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignRight="@+id/tv_text"
                android:layout_below="@+id/tv_text"
                android:layout_toRightOf="@+id/iv_icon"
                android:gravity="center_vertical|top"

                android:padding="4dp"
                android:text="根据人体查疾病，快速找药"
                android:textColor="@color/color_main_text_gray_color"/>

            <ImageView
                android:id="@id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_find_medical_arrow"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#FFD2D2D2"
            />


    </LinearLayout>
</ScrollView>

