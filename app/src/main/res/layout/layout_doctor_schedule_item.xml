<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_linear_item_selector"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_linear_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_list_single_item_height"
            android:gravity="center_vertical"
            android:singleLine="true"
            tools:text="2015-05-20"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_list_single_item_height"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:singleLine="true"
            tools:text="周五下午 14:00-17:00"
            />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_register_code_selector"
            android:padding="10dp"
            android:src="@mipmap/ic_user_arrow"
            android:text="预约挂号"
            android:layout_margin="4dp"
            android:textColor="@color/color_white_color"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#FF999999"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="0.5dp"/>
</LinearLayout>