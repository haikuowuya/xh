<?xml version="1.0" encoding="utf-8"?>
<!--确认订单中的支付以及配送方式-->


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp">

    <TextView
        android:id="@+id/tv_pay_hint"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="支付及配送"
        android:textColor="#FF333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/iv_arrow"
        android:layout_toRightOf="@+id/tv_pay_hint"
        android:gravity="center_vertical|right"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_despatch_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="4dp"
            android:lineSpacingExtra="4dp"
            tools:text="在线支付\n普通快递"/>

        <TextView
            android:id="@+id/tv_despatch_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="#FFFF8142"
            android:padding="4dp"
            tools:text="2015-9-20(周六)"/>

    </LinearLayout>


    <ImageView
        android:id="@id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:src="@mipmap/ic_user_arrow"/>
</RelativeLayout>
