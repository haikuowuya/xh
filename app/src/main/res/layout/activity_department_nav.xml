<FrameLayout
    android:id="@id/frame_content_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_department_right_default_color"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_left_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_department_left_default_color"
            android:layout_weight="1"
            />

        <ListView
            android:id="@+id/lv_right_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:cacheColorHint="#00000000"
             
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>


</FrameLayout>