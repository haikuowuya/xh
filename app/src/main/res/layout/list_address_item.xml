<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_linear_item_selector">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_linear_item_selector">


        <LinearLayout
            android:id="@+id/view_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
            android:background="#FFDEDEDE"
            android:gravity="right">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="10dp"
                android:padding="8dp"
                android:src="@mipmap/ic_launcher"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/view_front"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/list_linear_white_item_selector"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_list_single_item_height"
                        android:gravity="center_vertical"
                        android:textColor="#FF000000"
                        android:textStyle="bold"
                        tools:text="张三"/>

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_list_single_item_height"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:padding="10dp"
                        android:textColor="#FF666666"
                        android:textStyle="bold"
                        tools:text="152361638465"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|top"
                    android:minHeight="@dimen/dimen_list_single_item_height"
                    android:textColor="#FF333333"
                    tools:text="江苏省盐城市建湖县 工业园区1355号"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:visibility="invisible"
                android:src="@mipmap/ic_user_arrow"/>
        </LinearLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>