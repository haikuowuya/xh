<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_linear_item_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.xinheng.view.CircularImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:id="@+id/iv_image"
                android:padding="20dp"
                android:src="@mipmap/ic_user_medical_0"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_drug_name"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="药品名称"
                tools:text="药品名称"/>


            <TextView
                android:id="@+id/tv_drug_nature"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:gravity="center_vertical"
                android:singleLine="true"
                tools:text="清热解毒，祛痰止咳、脘腹"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_add"
            android:background="@drawable/btn_register_code_selector"
            android:text="加入处方"
            android:textColor="@color/color_white_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/ic_user_arrow"/>

    </LinearLayout>