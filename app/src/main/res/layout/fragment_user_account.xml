<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/sv_scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_content_background_color"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:orientation="vertical"
                  android:padding="10dp">

        <LinearLayout
            android:id="@+id/linear_photo_container"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:background="@drawable/list_linear_white_item_selector"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_photo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="上传头像"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@mipmap/ic_find_medical_arrow"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_user_account_info_background"
            android:orientation="vertical"
            android:padding="0.5dp">

            <LinearLayout
                android:id="@+id/linear_username_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:background="@drawable/list_linear_white_item_selector"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="姓名"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text="张花花"/>

                <ImageView
                    android:layout_width="@dimen/dimen_list_single_item_height"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="14dp"
                    android:src="@mipmap/ic_find_medical_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_nick_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:layout_marginTop="1dp"
                android:background="@drawable/list_linear_white_item_selector"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="昵称"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text="花花"/>

                <ImageView
                    android:layout_width="@dimen/dimen_list_single_item_height"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="14dp"
                    android:src="@mipmap/ic_find_medical_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_address_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:layout_marginTop="1dp"
                android:background="@drawable/list_linear_white_item_selector"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="地址管理"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text=""/>

                <ImageView
                    android:layout_width="@dimen/dimen_list_single_item_height"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="14dp"
                    android:src="@mipmap/ic_find_medical_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_account_secure"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_list_single_item_height"
                android:layout_marginTop="1dp"
                android:background="@drawable/list_linear_white_item_selector"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="账户安全"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:padding="10dp"
                    android:text=""/>

                <ImageView
                    android:layout_width="@dimen/dimen_list_single_item_height"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="14dp"
                    android:src="@mipmap/ic_find_medical_arrow"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

